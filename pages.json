{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/index/index"
        }, {
            "path": "pages/login/login",
            "style": {
                "topWindow": false,
                "leftWindow": false,
                "navigationBarTitleText": "登录"
            }
        }, {
            "path": "pages/error/404",
            "style": {
                "navigationBarTitleText": "Not Found"
            }
        }, {
            "path": "pages/password/password",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }

        }
    ],
    "subPackages": [{
        "root": "pages/base",
        "pages": [{
            "path": "menu/menu",
            "style": {
                "navigationBarTitleText": "菜单管理"
            }
        }, {
            "path": "permission/permission",
            "style": {
                "navigationBarTitleText": "权限管理"
            }

        }, {
            "path": "permission/edit",
            "style": {
                "navigationBarTitleText": "修改权限"
            }

        }, {
            "path": "role/role",
            "style": {
                "navigationBarTitleText": "角色管理"
            }

        }, {
            "path": "role/edit",
            "style": {
                "navigationBarTitleText": "修改角色"
            }

        }, {
            "path": "user/user",
            "style": {
                "navigationBarTitleText": "用户管理"
            }
        }, {
            "path": "storage/storage",
            "style": {
                "navigationBarTitleText": "云存储管理"
            }
        }]
    }, {
        "root": "pages/demo",
        "pages": [{
            "path": "table/table",
            "style": {
                "navigationBarTitleText": "表格"
            }
        }, {
            "path": "init/init",
            "style": {
                "topWindow": false,
                "leftWindow": false,
                "navigationBarTitleText": "初始化"
            }
        }]
    }],
    "easycom": {
        "custom": {
            "^el-(.*)": "element-ui/lib/$1.js"
        }
    },
    "globalStyle": {
        "navigationStyle": "custom",
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "管理系统",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "topWindow": {
        "path": "windows/topWindow",
        "style": {
            "height": "60px"
        },
        "matchMedia": {
            "minWidth": 1
        }
    },
    "leftWindow": {
        "path": "windows/leftWindow",
        "style": {
            "width": "240px"
        }
    }
}
